{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [{
        "taskName": "main",
        "type": "shell",
        "command": "clang++",
        "args": [
            "-std=c++11",
            "./BlizzardBallBattle/*.cpp",
            "./BlizzardBallBattle/Engine/Component/*.cpp",
            "./BlizzardBallBattle/Engine/Component/Render/*.cpp",
            "./BlizzardBallBattle/Engine/External/*.cpp",
            "./BlizzardBallBattle/Engine/External/Render/*.cpp",
            "./BlizzardBallBattle/Engine/Manager/*.cpp",
            "./BlizzardBallBattle/Game/Components/*.cpp",
            "./BlizzardBallBattle/Game/GameObjects/*.cpp",
            "./BlizzardBallBattle/Game/ExternalClasses/*.cpp",
            "-I${workspaceRoot}/BlizzardBallBattle",
            "-I${workspaceRoot}/BlizzardBallBattle/Engine",
            "-I${workspaceRoot}/BlizzardBallBattle/Engine/Component",
            "-I${workspaceRoot}/BlizzardBallBattle/Engine/Component/Render",
            "-I${workspaceRoot}/BlizzardBallBattle/Engine/Manager",
            "-I${workspaceRoot}/BlizzardBallBattle/Engine/External",
            "-I${workspaceRoot}/BlizzardBallBattle/Engine/External/Render",
            "-I${workspaceRoot}/BlizzardBallBattle/Game",
            "-I${workspaceRoot}/BlizzardBallBattle/Game/Components",
            "-I${workspaceRoot}/BlizzardBallBattle/Game/GameObjects",
            "-I${workspaceRoot}/BlizzardBallBattle/Game/ExternalClasses",
            "-framework OpenGL",
            "-lGLEW",
            "-lSDL2",
            "-lSDL2_image",
            "-lSDL2_net",
            "-g"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        }
    }]
}